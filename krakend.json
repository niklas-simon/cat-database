{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Cat Database",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "no-op",
  "port": 80,
  "endpoints": [
    {
      "endpoint": "/",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "cat-service"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/new",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/new",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "cat-service"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://auth/.well-known/jwks.json",
          "cache": true,
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/login",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "auth"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "auth"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "cat-service"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "auth/.well-known/jwks.json",
          "cache": true,
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/{id}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{id}",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "cat-service"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/{id}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{id}?user={JWT.sub}",
          "encoding": "no-op",
          "sd": "static",
          "method": "DELETE",
          "host": [
            "wrapper"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "auth/.well-known/jwks.json",
          "cache": true,
          "disable_jwk_security": true
        }
      }
    }
  ]
}